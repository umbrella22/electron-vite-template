{
    "compileOnSave": false,
    "compilerOptions": {
        "resolveJsonModule": true,
        "baseUrl": ".",
        "outDir": "./dist/electron/main",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "allowJs": true,
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@main/*": [
                "src/main/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}